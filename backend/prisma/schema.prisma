// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  profile   UserProfile?
  complianceStatuses UserComplianceStatus[]
}

model UserProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workType          String   // freelancer, shop_owner, gig_worker, small_business
  monthlyIncome     String   // <10k, 10k-50k, 50k-1L, 1L-5L, >5L
  isGstRegistered   Boolean  @default(false)
  state             String
  city              String?
  
  onboardingCompleted Boolean @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ComplianceRule {
  id          String   @id @default(cuid())
  code        String   @unique // e.g., GST_MONTHLY, ITR_ANNUAL
  name        String
  description String   // Legal description
  category    String   // GST, IncomeTax, Labor, etc.
  
  // Conditions for applicability
  applicableWorkTypes    String? // JSON array or comma-separated
  minIncome              String?
  maxIncome              String?
  requiresGst            Boolean?
  applicableStates       String? // JSON array or comma-separated
  
  // Compliance details
  frequency              String   // monthly, quarterly, annual
  deadlineDay            Int?     // Day of month
  deadlineMonth          Int?     // Month (for annual)
  penaltyAmount          String?
  penaltyDescription     String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userStatuses UserComplianceStatus[]
}

model UserComplianceStatus {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  complianceRuleId  String
  rule              ComplianceRule @relation(fields: [complianceRuleId], references: [id])
  
  status            String   @default("pending") // pending, completed, not_applicable
  dueDate           DateTime?
  completedDate     DateTime?
  notes             String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([userId, complianceRuleId])
}








